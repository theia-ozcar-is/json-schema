{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "${JSON_SCHEMA_API_URL}datasets_schema.json",
    "definitions": {
        "type": "array",
        "minItems": 1,
        "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "metadata",
                "datasetId",
                "observations"
            ],
            "properties": {
                "datasetId": {
                    "type": "string",
                    "pattern": "^[A-Z]{4}_DAT_.{1,}$"
                },
                "metadata": {
                    "type": "object",
                    "required": [
                        "title",
                        "description",
                        "datasetLineage",
                        "contacts",
                        "topicCategories",
                        "inspireTheme",
                        "dataConstraint",
                        "portalSearchCriteria",
                        "spatialExtent"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "objective": {
                            "type": "string"
                        },
                        "datasetLineage": {
                            "type": "string"
                        },
                        "contacts": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "OneOf": [{
                                        "type": "object",
                                        "additionalProperties": false,
                                        "required": [
                                            "firstName",
                                            "lastName",
                                            "email",
                                            "role"
                                        ],
                                        "properties": {
                                            "firstName": {
                                                "type": "string"
                                            },
                                            "lastName": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string",
                                                "format": "email"
                                            },
                                            "role": {
                                                "enum": [
                                                    "Principal investigator",
                                                    "Data manager",
                                                    "Project member",
                                                    "Data collector"
                                                ]
                                            },
                                            "orcId": {
                                                "type": "string"
                                            },
                                            "organisation": {
                                                "anyOf": [{
                                                        "type": "object",
                                                        "additionalProperties": false,
                                                        "required": [
                                                            "role",
                                                            "acronym",
                                                            "name",
                                                            "iso3166"
                                                        ],
                                                        "properties": {
                                                            "role": {
                                                                "enum": [
                                                                    "Research group"
                                                                ]
                                                            },
                                                            "acronym": {
                                                                "type": "string"
                                                            },
                                                            "name": {
                                                                "type": "string"
                                                            },
                                                            "iso3166": {
                                                                "type": "string"
                                                            },
                                                            "idScanR": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    },
                                                    {
                                                        "type": "object",
                                                        "additionalProperties": false,
                                                        "required": [
                                                            "role",
                                                            "acronym",
                                                            "iso3166"
                                                        ],
                                                        "properties": {
                                                            "role": {
                                                                "enum": [
                                                                    "Research group"
                                                                ]
                                                            },
                                                            "acronym": {
                                                                "type": "string"
                                                            },
                                                            "name": {
                                                                "type": "string"
                                                            },
                                                            "iso3166": {
                                                                "type": "string"
                                                            },
                                                            "idScanR": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    },
                                                    {
                                                        "type": "object",
                                                        "additionalProperties": false,
                                                        "required": [
                                                            "role",
                                                            "name",
                                                            "iso3166"
                                                        ],
                                                        "properties": {
                                                            "role": {
                                                                "enum": [
                                                                    "Research group"
                                                                ]
                                                            },
                                                            "acronym": {
                                                                "type": "string"
                                                            },
                                                            "name": {
                                                                "type": "string"
                                                            },
                                                            "iso3166": {
                                                                "type": "string"
                                                            },
                                                            "idScanR": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    },
                                                    {
                                                        "type": "object",
                                                        "additionalProperties": false,
                                                        "required": [
                                                            "idScanR"
                                                        ],
                                                        "properties": {
                                                            "role": {
                                                                "enum": [
                                                                    "Research group"
                                                                ]
                                                            },
                                                            "acronym": {
                                                                "type": "string"
                                                            },
                                                            "name": {
                                                                "type": "string"
                                                            },
                                                            "iso3166": {
                                                                "type": "string"
                                                            },
                                                            "idScanR": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    },
                                    {
                                        "anyOf": [{
                                                "type": "object",
                                                "additionalProperties": false,
                                                "required": [
                                                    "role",
                                                    "acronym",
                                                    "name",
                                                    "iso3166"
                                                ],
                                                "properties": {
                                                    "role": {
                                                        "enum": [
                                                            "Research group"
                                                        ]
                                                    },
                                                    "acronym": {
                                                        "type": "string"
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "iso3166": {
                                                        "type": "string"
                                                    },
                                                    "idScanR": {
                                                        "type": "string"
                                                    }
                                                }
                                            },
                                            {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "required": [
                                                    "role",
                                                    "acronym",
                                                    "iso3166"
                                                ],
                                                "properties": {
                                                    "role": {
                                                        "enum": [
                                                            "Research group"
                                                        ]
                                                    },
                                                    "acronym": {
                                                        "type": "string"
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "iso3166": {
                                                        "type": "string"
                                                    },
                                                    "idScanR": {
                                                        "type": "string"
                                                    }
                                                }
                                            },
                                            {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "required": [
                                                    "role",
                                                    "name",
                                                    "iso3166"
                                                ],
                                                "properties": {
                                                    "role": {
                                                        "enum": [
                                                            "Research group"
                                                        ]
                                                    },
                                                    "acronym": {
                                                        "type": "string"
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "iso3166": {
                                                        "type": "string"
                                                    },
                                                    "idScanR": {
                                                        "type": "string"
                                                    }
                                                }
                                            },
                                            {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "required": [
                                                    "idScanR"
                                                ],
                                                "properties": {
                                                    "role": {
                                                        "enum": [
                                                            "Research group"
                                                        ]
                                                    },
                                                    "acronym": {
                                                        "type": "string"
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "iso3166": {
                                                        "type": "string"
                                                    },
                                                    "idScanR": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        },
                        "inspireTheme": {
                            "enum": [
                                "Addresses",
                                "Administrative units",
                                "Agricultural and aquaculture facilities",
                                "Area management/restriction/regulation zones and reporting units",
                                "Atmospheric conditions",
                                "Bio-geographical regions",
                                "Buildings",
                                "Cadastral parcels",
                                "Coordinate reference systems",
                                "Elevation",
                                "Energy resources",
                                "Environmental monitoring facilities",
                                "Geographical grid systems",
                                "Geographical names",
                                "Geology",
                                "Habitats and biotopes",
                                "Human health and safety",
                                "Hydrography",
                                "Land cover",
                                "Land use",
                                "Meteorological geographical features",
                                "Mineral resources",
                                "Natural risk zones",
                                "Oceanographic geographical features",
                                "Orthoimagery",
                                "Population distribution - demography",
                                "Production and industrial facilities",
                                "Protected sites",
                                "Sea regions",
                                "Soil",
                                "Species distribution",
                                "Statistical units",
                                "Transport networks",
                                "Utility and governmental services"
                            ]
                        },
                        "topicCategories": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "enum": [
                                    "Boundaries",
                                    "Biota",
                                    "Climatology / Meteorology / Atmosphere",
                                    "Economy",
                                    "Elevation",
                                    "Environment",
                                    "Farming",
                                    "Geoscientific Information",
                                    "Health",
                                    "Imagery / Base Maps / Earth Cover",
                                    "Inland Waters",
                                    "Intelligence / Military",
                                    "Location",
                                    "Oceans",
                                    "Planning / Cadastre",
                                    "Society",
                                    "Structure",
                                    "Transportation",
                                    "Utilities / Communication"
                                ]
                            }
                        },
                        "keywords": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "object",
                                "additionalProperties": false,
                                "required": [
                                    "keyword"
                                ],
                                "properties": {
                                    "keyword": {
                                        "type": "string"
                                    },
                                    "uri": {
                                        "type": "string",
                                        "format": "uri"
                                    }
                                }
                            }
                        },
                        "documents": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "object",
                                "additionalProperties": false,
                                "required": [
                                    "type",
                                    "url"
                                ],
                                "properties": {
                                    "type": {
                                        "enum": [
                                            "Publication",
                                            "Manual"
                                        ]
                                    },
                                    "url": {
                                        "type": "string",
                                        "format": "uri"
                                    }
                                }
                            }
                        },
                        "onlineResource": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "urlDownload": {
                                    "type": "string",
                                    "format": "uri"
                                },
                                "urlInfo": {
                                    "type": "string",
                                    "format": "uri"
                                },
                                "doi": {
                                    "type": "string",
                                    "pattern": "^(10[.][0-9]{4,}(?:[.][0-9]+)*/(?:(?![\"&\\'<>])\\S)+|10.\\d{4,9}[-._;()/:A-Z0-9]+|10.1002[^\\s]+|10.\\d{4}\\d+-\\d+X?(\\d+)\\d+<[\\d\\w]+:[\\d\\w]*>\\d+.\\d+.\\w+;\\d)$"
                                },
                                "webservices": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "required": [
                                            "description",
                                            "url"
                                        ],
                                        "properties": {
                                            "description": {
                                                "type": "string"
                                            },
                                            "url": {
                                                "type": "string",
                                                "format": "uri"
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "dataConstraint": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "accessUseConstraint"
                            ],
                            "properties": {
                                "accessUseConstraint": {
                                    "type": "string"
                                },
                                "urlDataPolicy": {
                                    "type": "string",
                                    "format": "uri"
                                },
                                "licence": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": [
                                        "title",
                                        "url"
                                    ],
                                    "properties": {
                                        "title": {
                                            "type": "string"
                                        },
                                        "url": {
                                            "type": "string",
                                            "format": "uri"
                                        }
                                    }
                                },
                                "embargo": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": [
                                        "duration",
                                        "priviledgedUsers"
                                    ],
                                    "properties": {
                                        "duration": {
                                            "type": "number"
                                        },
                                        "priviledgedUsers": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "format": "email"
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "portalSearchCriteria": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "climates",
                                "geologies"
                            ],
                            "properties": {
                                "climates": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "enum": [
                                            "Oceanic climate",
                                            "Tropical climate",
                                            "Mountain climate",
                                            "Mediterranean climate",
                                            "Continental climate",
                                            "Polar climate",
                                            "Arid climate",
                                            "Equatorial climate"
                                        ]
                                    }
                                },
                                "geologies": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "enum": [
                                            "Volcanic rocks",
                                            "Plutonic rocks",
                                            "Metamorphic rocks",
                                            "Carbonate rocks",
                                            "Quaternary soils",
                                            "Other sedimentary rocks"
                                        ]
                                    }
                                }
                            }
                        },
                        "spatialExtent": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "type",
                                "properties",
                                "geometry"
                            ],
                            "properties": {
                                "type": {
                                    "enum": [
                                        "Feature"
                                    ]
                                },
                                "properties": {
                                    "type": "object"
                                },
                                "geometry": {
                                    "oneOf": [{
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [
                                                "coordinates",
                                                "type"
                                            ],
                                            "properties": {
                                                "type": {
                                                    "enum": [
                                                        "Polygon"
                                                    ]
                                                },
                                                "coordinates": {
                                                    "type": "array",
                                                    "uniqueItems": true,
                                                    "items": {
                                                        "type": "array",
                                                        "minItems": 3,
                                                        "items": {
                                                            "anyOf": [{
                                                                    "type": "array",
                                                                    "items": [{
                                                                            "type": "number",
                                                                            "minimum": -180,
                                                                            "maximum": 180
                                                                        },
                                                                        {
                                                                            "type": "number",
                                                                            "minimum": -90,
                                                                            "maximum": 90
                                                                        },
                                                                        {
                                                                            "type": "number"
                                                                        }
                                                                    ]
                                                                },
                                                                {
                                                                    "type": "array",
                                                                    "items": [{
                                                                            "type": "number",
                                                                            "minimum": -180,
                                                                            "maximum": 180
                                                                        },
                                                                        {
                                                                            "type": "number",
                                                                            "minimum": -90,
                                                                            "maximum": 90
                                                                        }
                                                                    ]
                                                                }
                                                            ]
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [
                                                "coordinates",
                                                "type"
                                            ],
                                            "properties": {
                                                "properties": {
                                                    "type": "null"
                                                },
                                                "type": {
                                                    "enum": [
                                                        "MultiPolygon"
                                                    ]
                                                },
                                                "coordinates": {
                                                    "type": "array",
                                                    "minItems": 1,
                                                    "items": {
                                                        "type": "array",
                                                        "uniqueItems": true,
                                                        "items": {
                                                            "type": "array",
                                                            "minItems": 3,
                                                            "items": {
                                                                "anyOf": [{
                                                                        "type": "array",
                                                                        "items": [{
                                                                                "type": "number",
                                                                                "minimum": -180,
                                                                                "maximum": 180
                                                                            },
                                                                            {
                                                                                "type": "number",
                                                                                "minimum": -90,
                                                                                "maximum": 90
                                                                            },
                                                                            {
                                                                                "type": "number"
                                                                            }
                                                                        ]
                                                                    },
                                                                    {
                                                                        "type": "array",
                                                                        "items": [{
                                                                                "type": "number",
                                                                                "minimum": -180,
                                                                                "maximum": 180
                                                                            },
                                                                            {
                                                                                "type": "number",
                                                                                "minimum": -90,
                                                                                "maximum": 90
                                                                            }
                                                                        ]
                                                                    }
                                                                ]
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                },
                "observations": {
                    "type": "array",
                    "$ref": "observations_schema.json#/definitions"
                }
            }
        }
    },
    "type": "array",
    "$ref": "#/definitions"
}