{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "${JSON_SCHEMA_API_URL}observations_schema.json#/definitions",
    "definitions": {
        "type": "array",
        "minItems": 1,
        "items": {
            "type": "object",
            "required": [
                "observationId",
                "dataType",
                "temporalExtent",
                "timeSerie",
                "featureOfInterest",
                "observedProperty",
                "result"
            ],
            "additionalProperties": false,
            "properties": {
                "observationId": {
                    "type": "string",
                    "pattern": "^[A-Z]{4}_OBS_.{1,}$"
                },
                "processingLevel": {
                    "enum": [
                        "Raw data",
                        "Quality-controlled data",
                        "Derived products"
                    ]
                },
                "temporalExtent": {
                    "type": "object",
                    "required": [
                        "dateBeg",
                        "dateEnd"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "dateBeg": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "dateEnd": {
                            "type": "string",
                            "format": "date-time"
                        }
                    }
                },
                "timeSerie": {
                    "type": "boolean"
                },
                "dataType": {
                    "enum": ["Numeric", "Vector", "Raster", "Photo", "Video", "Text", "Audio", "Other"]
                },
                "featureOfInterest": {
                    "type": "object",
                    "required": [
                        "samplingFeature"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "samplingFeature": {
                            "type": "object",
                            "required": [
                                "type",
                                "properties",
                                "geometry"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "type": {
                                    "enum": [
                                        "Feature"
                                    ]
                                },
                                "properties": {
                                    "type": "object"
                                },
                                "geometry": {
                                    "oneOf": [{
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [
                                                "coordinates",
                                                "type"
                                            ],
                                            "properties": {
                                                "type": {
                                                    "enum": [
                                                        "Point"
                                                    ]
                                                },
                                                "coordinates": {    
                                                    "anyOf": [{
                                                            "type": "array",
                                                            "items": [{
                                                                    "type": "number",
                                                                    "minimum": -180,
                                                                    "maximum": 180
                                                                },
                                                                {
                                                                    "type": "number",
                                                                    "minimum": -90,
                                                                    "maximum": 90
                                                                },
                                                                {
                                                                    "type": "number"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "type": "array",
                                                            "items": [{
                                                                    "type": "number",
                                                                    "minimum": -180,
                                                                    "maximum": 180
                                                                },
                                                                {
                                                                    "type": "number",
                                                                    "minimum": -90,
                                                                    "maximum": 90
                                                                }
                                                            ]
                                                        }
                                                    ]
                                                }
                                            }
                                        },
                                        {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [
                                                "coordinates",
                                                "type"
                                            ],
                                            "properties": {
                                                "type": {
                                                    "enum": [
                                                        "LineString"
                                                    ]
                                                },
                                                "coordinates": {
                                                    "anyOf": [{
                                                            "type": "array",
                                                            "minItems": 2,
                                                            "items": {
                                                                "type": "array",
                                                                "items": [{
                                                                        "type": "number",
                                                                        "minimum": -180,
                                                                        "maximum": 180
                                                                    },
                                                                    {
                                                                        "type": "number",
                                                                        "minimum": -90,
                                                                        "maximum": 90
                                                                    },
                                                                    {
                                                                        "type": "number"
                                                                    }
                                                                ]
                                                            }
                                                        },
                                                        {
                                                            "type": "array",
                                                            "minItems": 2,
                                                            "items": {
                                                                "type": "array",
                                                                "items": [{
                                                                        "type": "number",
                                                                        "minimum": -180,
                                                                        "maximum": 180
                                                                    },
                                                                    {
                                                                        "type": "number",
                                                                        "minimum": -90,
                                                                        "maximum": 90
                                                                    }
                                                                ]
                                                            }
                                                        }
                                                    ]
                                                }
                                            }
                                        },
                                        {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [
                                                "coordinates",
                                                "type"
                                            ],
                                            "properties": {
                                                "type": {
                                                    "enum": [
                                                        "MultiPoint"
                                                    ]
                                                },
                                                "coordinates": {
                                                    "anyOf": [{
                                                            "type": "array",
                                                            "minItems": 1,
                                                            "items": {
                                                                "type": "array",
                                                                "items": [{
                                                                        "type": "number",
                                                                        "minimum": -180,
                                                                        "maximum": 180
                                                                    },
                                                                    {
                                                                        "type": "number",
                                                                        "minimum": -90,
                                                                        "maximum": 90
                                                                    },
                                                                    {
                                                                        "type": "number"
                                                                    }
                                                                ]
                                                            }
                                                        },
                                                        {
                                                            "type": "array",
                                                            "minItems": 1,
                                                            "items": {
                                                                "type": "array",
                                                                "items": [{
                                                                        "type": "number",
                                                                        "minimum": -180,
                                                                        "maximum": 180
                                                                    },
                                                                    {
                                                                        "type": "number",
                                                                        "minimum": -90,
                                                                        "maximum": 90
                                                                    }
                                                                ]
                                                            }
                                                        }
                                                    ]
                                                }
                                            }
                                        },
                                        {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [
                                                "coordinates",
                                                "type"
                                            ],
                                            "properties": {
                                                "type": {
                                                    "enum": [
                                                        "MultiLineString"
                                                    ]
                                                },
                                                "coordinates": {
                                                    "type": "array",
                                                    "minItems": 1,
                                                    "items": {
                                                        "anyOf": [{
                                                                "type": "array",
                                                                "minItems": 2,
                                                                "items": {
                                                                    "type": "array",
                                                                    "items": [{
                                                                            "type": "number",
                                                                            "minimum": -180,
                                                                            "maximum": 180
                                                                        },
                                                                        {
                                                                            "type": "number",
                                                                            "minimum": -90,
                                                                            "maximum": 90
                                                                        },
                                                                        {
                                                                            "type": "number"
                                                                        }
                                                                    ]
                                                                }
                                                            },
                                                            {
                                                                "type": "array",
                                                                "minItems": 2,
                                                                "items": {
                                                                    "type": "array",
                                                                    "items": [{
                                                                            "type": "number",
                                                                            "minimum": -180,
                                                                            "maximum": 180
                                                                        },
                                                                        {
                                                                            "type": "number",
                                                                            "minimum": -90,
                                                                            "maximum": 90
                                                                        }
                                                                    ]
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            }
                                        },
                                        {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [
                                                "coordinates",
                                                "type"
                                            ],
                                            "properties": {
                                                "type": {
                                                    "enum": [
                                                        "Polygon"
                                                    ]
                                                },
                                                "coordinates": {
                                                    "type": "array",
                                                    "minItems": 1,
                                                    "maxItems": 1,
                                                    "items": {
                                                        "type": "array",
                                                        "minItems": 3,
                                                        "items": {
                                                            "anyOf": [{
                                                                    "type": "array",
                                                                    "items": [{
                                                                            "type": "number",
                                                                            "minimum": -180,
                                                                            "maximum": 180
                                                                        },
                                                                        {
                                                                            "type": "number",
                                                                            "minimum": -90,
                                                                            "maximum": 90
                                                                        },
                                                                        {
                                                                            "type": "number"
                                                                        }
                                                                    ]
                                                                },
                                                                {
                                                                    "type": "array",
                                                                    "items": [{
                                                                            "type": "number",
                                                                            "minimum": -180,
                                                                            "maximum": 180
                                                                        },
                                                                        {
                                                                            "type": "number",
                                                                            "minimum": -90,
                                                                            "maximum": 90
                                                                        }
                                                                    ]
                                                                }
                                                            ]
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [
                                                "coordinates",
                                                "type"
                                            ],
                                            "properties": {
                                                "type": {
                                                    "enum": [
                                                        "MultiPolygon"
                                                    ]
                                                },
                                                "coordinates": {
                                                    "type": "array",
                                                    "minItems": 1,
                                                    "items": {
                                                        "type": "array",
                                                        "minItems": 1,
                                                        "maxItems": 1,
                                                        "items": {
                                                            "type": "array",
                                                            "minItems": 3,
                                                            "items": {
                                                                "anyOf": [{
                                                                        "type": "array",
                                                                        "items": [{
                                                                                "type": "number",
                                                                                "minimum": -180,
                                                                                "maximum": 180
                                                                            },
                                                                            {
                                                                                "type": "number",
                                                                                "minimum": -90,
                                                                                "maximum": 90
                                                                            },
                                                                            {
                                                                                "type": "number"
                                                                            }
                                                                        ]
                                                                    },
                                                                    {
                                                                        "type": "array",
                                                                        "items": [{
                                                                                "type": "number",
                                                                                "minimum": -180,
                                                                                "maximum": 180
                                                                            },
                                                                            {
                                                                                "type": "number",
                                                                                "minimum": -90,
                                                                                "maximum": 90
                                                                            }
                                                                        ]
                                                                    }
                                                                ]
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                },
                "observedProperty": {
                    "type": "object",
                    "required": [
                        "name",
                        "theiaCategories"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "unit": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "theiaCategories": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "string",
                                "format": "uri"
                            }
                        },
                        "gcmdKeywords": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "object",
                                "required": [
                                    "category",
                                    "topic"
                                ],
                                "additionalProperties": false,
                                "properties": {
                                    "category": {
                                        "type": "string"
                                    },
                                    "topic": {
                                        "type": "string"
                                    },
                                    "term": {
                                        "type": "string"
                                    },
                                    "variableLevel1": {
                                        "type": "string"
                                    },
                                    "variableLevel2": {
                                        "type": "string"
                                    },
                                    "variableLevel3": {
                                        "type": "string"
                                    },
                                    "uuid": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "procedure": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "lineageInformations": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "object",
                                "required": [
                                    "processingDescription"
                                ],
                                "additionalProperties": false,
                                "properties": {
                                    "processingDescription": {
                                        "type": "string"
                                    },
                                    "processingDate": {
                                        "type": "string",
                                        "format": "date-time"
                                    }
                                }
                            }
                        },
                        "dataProduction": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "method": {
                                    "type": "string"
                                },
                                "sensors": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "oneOf": [{
                                                "type": "object",
                                                "required": [
                                                    "model",
                                                    "manufacturer"
                                                ],
                                                "additionalProperties": false,
                                                "properties": {
                                                    "model": {
                                                        "type": "string"
                                                    },
                                                    "manufacturer": {
                                                        "type": "string"
                                                    },
                                                    "serialNumber": {
                                                        "type": "string"
                                                    },
                                                    "sensorType": {
                                                        "type": "string"
                                                    },
                                                    "calibration": {
                                                        "type": "string"
                                                    },
                                                    "documents": {
                                                        "type": "array",
                                                        "minItems": 1,
                                                        "items": {
                                                            "type": "object",
                                                            "additionalProperties": false,
                                                            "required": [
                                                                "type",
                                                                "url"
                                                            ],
                                                            "properties": {
                                                                "type": {
                                                                    "enum": [
                                                                        "Publication",
                                                                        "Manual"
                                                                    ]
                                                                },
                                                                "url": {
                                                                    "type": "string",
                                                                    "format": "uri"
                                                                }
                                                            }
                                                        }
                                                    },
                                                    "activityPeriods": {
                                                        "type": "array",
                                                        "minItems": 1,
                                                        "items": {
                                                            "type": "object",
                                                            "required": [
                                                                "dateBeg",
                                                                "dateEnd"
                                                            ],
                                                            "additionalProperties": false,
                                                            "properties": {
                                                                "dateBeg": {
                                                                    "type": "string",
                                                                    "format": "date-time"
                                                                },
                                                                "dateEnd": {
                                                                    "type": "string",
                                                                    "format": "date-time"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "type": "object",
                                                "required": [
                                                    "name",
                                                    "parametrisationDescription"
                                                ],
                                                "additionalProperties": false,
                                                "properties": {
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "parametrisationDescription": {
                                                        "type": "string"
                                                    },
                                                    "documents": {
                                                        "type": "array",
                                                        "minItems": 1,
                                                        "items": {
                                                            "type": "object",
                                                            "additionalProperties": false,
                                                            "required": [
                                                                "type",
                                                                "url"
                                                            ],
                                                            "properties": {
                                                                "type": {
                                                                    "enum": [
                                                                        "Publication",
                                                                        "Manual"
                                                                    ]
                                                                },
                                                                "url": {
                                                                    "type": "string",
                                                                    "format": "uri"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "result": {
                    "anyOf": [{
                        "type": "object",
                        "required": [
                            "dataFile"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "dataFile": {
                                "type": "object",
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    }
                                }
                            },
                            "missingValue": {
                                "type": "string"
                            },
                            "additionalValues": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "name",
                                        "columnName"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "columnName": {
                                            "type": "string"
                                        },
                                        "unit": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "qualityFlags": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "code",
                                        "description"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "code": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }]
                }
            }
        }
    },
    "type": "array",
    "$ref": "#/definitions"
}