{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "${JSON_SCHEMA_API_URL}simple_string_i18n.json",
  "definitions": {
    "type":"array",
    "minItems":1,
    "items":{
      "type":"object",
      "additionalProperties":false,
      "required":["lang", "text"],
      "properties":{
        "lang":{
          "enum":["en","fr","es"]
        },
        "text":{
          "type":"string"
        }
      }
    }
  }
}